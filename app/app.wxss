/* 图标库 */
@import "/ku/iconfont.wxss";

page,
view,
scroll-view,
swiper,
movable-area,
cover-view,
text,
icon,
rich-text,
progress,
button,
checkbox-group,
checkbox,
form,
input,
label,
picker,
picker-view,
radio-group,
slider,
switch,
textarea,
navigator,
audio,
image,
video,
live-player,
live-pusher,
open-data,
web-view {
    box-sizing: border-box;
}

page {
    display: flex;
    align-items: center;
    flex-direction: column;
    font-size: 32rpx;
}

div {
    display: block;
}

image {
    width: 100%;
    height: 100%;
}

button::after {
    border: none;
}

input {
    outline: none;
    border: none;
    list-style: none;
}