page {
  padding: 0 20rpx;
}
header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding-top: 18rpx;
  padding-bottom: 36rpx;
}
header .post {
  color: rgba(194, 103, 48, 1);
  font-size: 42rpx;
  font-family: MicrosoftYaHei-Bold;
  font-weight: bold;
}
main {
  width: 100%;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 20px;
  padding: 26rpx 30rpx 0;
  color: #c9c9c9;
}
main textarea {
  color: #fffefe;
  width: 100%;
  height: 484rpx;
}
main .placeholder {
  color: #fffefe;
}
main .location {
  font-size: 32rpx;
  padding: 26rpx 0;
  border-top: 1px solid #999;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
main .location:active {
  background: rgba(255, 255, 255, 0.07);
}
main .location .info {
  display: flex;
}
main .location .icon-location {
  margin-right: 10rpx;
  font-size: 38rpx;
}
main .location .icon-go {
  font-size: 24rpx;
  opacity: 0.7;
}

footer {
  margin-top: 124rpx;
  padding: 16rpx 54rpx 30rpx;
  background: rgba(255, 255, 255, 0.65);
  border-radius: 60px;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  width: 100%;
}
footer .icon-location {
  font-size: 60rpx;
}
footer .icon-location.active {
  font-size: 82rpx;
}
footer i + i {
  margin-left: 44rpx;
}
