<div class="music">
  <image class="cover" src="{{song.coverImgUrl}}"></image>
  <text class="title">{{song.title}} - {{song.singer}}</text>
  <text class="column">栏目名</text>
  <div class="time">
    <div class="now">{{timeNow}}</div>
    <div class="all">{{timeAll}}</div>
  </div>
  <slider bind:change="bindSlider" activeColor="#000000" backgroundColor="rgba(0,0,0,0.2)" block-color="#000000" block-size="16" value="{{silderNow}}" />
  <div class="player">
    <div class="prev" bind:tap="bindPrev">
      <i class="iconfont icon-prev"></i>
    </div>
    <div class="play" bind:tap="bindPlay">
      <i class="iconfont icon-{{paused ? 'play' : 'pause'}}"></i>
    </div>
    <div class="next" bind:tap="bindNext">
      <i class="iconfont icon-next"></i>
    </div>
  </div>
</div>
<div class="footer">
  <i class="iconfont icon-history"></i>
  <i class="iconfont icon-playing-list"></i>
  <i class="iconfont icon-article"></i>
</div>
