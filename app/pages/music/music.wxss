page {
  display: flex;
  align-items: center;
  flex-direction: column;
}

.button {
  border: 1px solid black;
  border-radius: 2px;
  width: 80%;
  height: 40px;
  margin-top: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
}

slider {
  margin-top: 20px;
  width: 80%;
}

.player {
  margin-top: 20px;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.player image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 2px;
}

.player text {
  margin-top: 10px;
  color: #FF7200;
}

.list {
  width: 80%;
}
.list .song {
  margin-top: 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.list .song image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}