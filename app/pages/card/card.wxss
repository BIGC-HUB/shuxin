page {
	height: 100%;
}
main {
	position: relative;
	width: 100%;
	height: 100%;
	background: linear-gradient(
		0deg,
		rgba(255, 255, 255, 0) 0%,
		rgba(0, 0, 0, 0.42) 100%
	);
	border-radius: 30rpx 30rpx 0 0;
	color: #fff;
}
main .t1 {
	margin-top: 54rpx;
	padding: 0 26rpx;
	display: flex;
	justify-content: space-between;
	font-size: 28rpx;
}
main .t2 {
	margin-top: 66rpx;
	padding: 0 76rpx 150rpx;
	font-size: 34rpx;
	font-family: FangSong;
}
main .icon-flag {
	position: absolute;
	top: -3rpx;
	left: 22rpx;
	width: 48rpx;
	height: 50rpx;
	font-size: 48rpx;
	opacity: 0.86;
}
footer {
	position: fixed;
	left: 0;
	right: 0;
	bottom: 0;
	height: 80rpx;
	width: 100%;
	background: rgba(20, 20, 20, 0.64);
	display: flex;
	justify-content: space-between;
	align-items: center;
	color: #c26730;
	font-size: 36rpx;
	padding: 0 34rpx;
}
footer .edit {
	position: relative;
	height: 100%;
	display: flex;
	align-items: center;
}
footer .edit .colors {
	position: absolute;
	bottom: 80rpx;
	right: -8rpx;
	width: 96rpx;
	height: 674rpx;
	background: rgba(16, 36, 43, 0.64);
	border-radius: 30rpx 30rpx 6rpx 6rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
}
footer .edit .colors .close {
	font-size: 66rpx;
	color: rgba(203, 206, 212, 1);
}
footer .edit .colors .color {
	border-radius: 50%;
	width: 54rpx;
	height: 54rpx;
	margin-bottom: 44rpx;
}
footer .edit .colors .color.active {
	box-shadow: 0 8rpx 8rpx 0 rgba(255, 255, 255, 0.16),
		0 0 0 8rpx rgba(255, 255, 255, 0.08);
}
