page {
  display: flex;
  align-items: center;
  flex-direction: column;
}

#map {
  position: relative;
  width: 100%;
  height: 100vh;
}

#map .top {
  width: 100%;
  position: absolute;
  top: 144rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

#map .top .serach {
  width: 590rpx;
  height: 72rpx;
  line-height: 72rpx;
  border: 1px solid #A0A0A0;
  background: rgba(239, 239, 239, 0.86);
  border-radius: 8px;
  padding: 0 26rpx;
  font-size: 32rpx;
  font-family: FangSong;
  color: #666;
}

#map .top cover-image.edit {
  margin-left: 22rpx;
  width: 68rpx;
  height: 68rpx;
}

#map .bottom {
  width: 100%;
  display: flex;
  justify-content: center;
  position: absolute;
  bottom: 100rpx;
}

#map .bottom .btns {
  position: relative;
  width: 516rpx;
  display: flex;
  justify-content: center;
}

#map .bottom .btn {
  position: absolute;
  padding: 20rpx;
}

#map .bottom .btn.share,
#map .bottom .btn.data {
  top: 58rpx;
  font-size: 34rpx;
  font-family: SimHei;
  color: rgba(220, 147, 127, 1);
  text-shadow: 0px 8px 8px rgba(29, 45, 47, 0.84);
}

#map .bottom .btn.data {
  left: 84rpx;
}

#map .bottom .btn.card {
  top: 32rpx;
  font-size: 48rpx;
  font-family: SimHei;
  color: rgba(220, 147, 127, 1);
  text-shadow: 0 8rpx 4rpx rgba(103, 52, 18, 0.84);
}

#map .bottom .btn.share {
  right: 84rpx;
}

#map .bottom cover-image.planet {
  width: 100%;
}

#map .left {
  width: 100%;
  display: flex;
  position: absolute;
  left: 18rpx;
  bottom: 298rpx;
}

#map .left cover-image.location {
  width: 66rpx;
}

/* 临时样式 */
.btns {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.btns button {
  width: 50%;
}