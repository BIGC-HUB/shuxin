page {
  display: flex;
  align-items: center;
  flex-direction: column;
}

#map {
  position: relative;
  width: 100%;
  height: 100vh;
}

#map .top {
  width: 100%;
  position: absolute;
  top: 144rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

#map .top .serach {
  width: 590rpx;
  height: 72rpx;
  border: 1px solid #666;
  border-radius: 8px;
  display: flex;
  align-items: center;
  padding: 0 26rpx;
  font-size: 32rpx;
  font-family: FangSong;
  color: #666;
  background: rgba(255, 255, 255, 0.6)
}

#map .top cover-image.edit {
  margin-left: 22rpx;
  width: 68rpx;
  height: 68rpx;
}

#map .bottom {
  width: 100%;
  display: flex;
  justify-content: center;
  position: absolute;
  bottom: 100rpx;
}
#map .bottom cover-image.planet {
  width: 516rpx;
}

/* 临时样式 */
.btns {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.btns button {
  width: 50%;
}