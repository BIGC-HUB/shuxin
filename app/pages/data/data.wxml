<image class="page-background" src="../../ku/img/bg3.jpg" />
<sea-nav-bar />
<header>
  <div>“蓝色潮汐”已陪您走过</div>
  <div>100</div>
  <div>个地方啦</div>
  <image src="./person.png" mode="aspectFit" />
</header>
<main>
  <div class="location">
    <scroll-view scroll-x class="province">
      <block wx:for="{{province}}" wx:key="index" >
        <div class="one {{index ===  provinceNow ? 'active' : ''}}"
          bind:tap="bindProvince" data-i="{{index}}">{{item}}</div>
      </block>
    </scroll-view>
    <div class="province-all {{provinceNow === 'all' ? 'active' : ''}}" bind:tap="bindAllProvince">全部</div>
  </div>
  <div class="cont">
    <div class="date">
      <div class="all {{dateNow === 'all' ? 'active' : ''}}" bind:tap="bindAllMonth">全部</div>
      <scroll-view scroll-y class="list">
        <block wx:for="{{date}}" wx:key="index">
          <div class="year">{{item.year}}</div>
          <block wx:for="{{item.month}}" wx:for-item="e" wx:for-index="i" wx:key="i">
            <div class="month {{index === dateNow[0] && i === dateNow[1] ? 'active' : ''}}" bind:tap="bindMonth" data-arr="{{[index, i]}}">
              <text>{{e}}</text>
              <span>月</span>
            </div>
          </block>
        </block>
      </scroll-view>
    </div>
    <div class="cards">
      <div class="card" wx:for="{{cards}}" wx:key="index" wx:for-item="card">
        <div class="content">{{card.content}}</div>
        <div class="card-date">{{card.date}}</div>
        <div class="city">{{card.city}}</div>
      </div>
    </div>
  </div>
</main>