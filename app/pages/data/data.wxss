header {
	position: relative;
	display: flex;
	justify-content: center;
	flex-direction: column;
	width: 100%;
	padding: 28rpx 30rpx 60rpx;
	font-size: 48rpx;
	font-family: KaiTi;
	color: rgba(83, 83, 83, 1);
	margin-bottom: 14rpx;
}
header image {
	position: absolute;
	bottom: 0;
	left: 0;
	height: 164rpx;
}
header div:nth-child(1) {
	align-self: flex-start;
}
header div:nth-child(2) {
	align-self: center;
	font-size: 92rpx;
	font-family: MicrosoftYaHei;
	font-weight: bold;
	color: rgba(53, 53, 53, 1);
	margin: 30rpx 0 20rpx;
}
header div:nth-child(3) {
	align-self: flex-end;
}

main {
	background: linear-gradient(
		0deg,
		rgba(255, 255, 255, 0) 0%,
		rgba(67, 69, 72, 1) 100%
	);
	display: flex;
	flex-direction: column;
	width: 100%;
	height: calc(100vh - 178rpx);
	border-radius: 30rpx 30rpx 0 0;
	padding: 0 20rpx;
}
main .location {
	display: flex;
	justify-content: space-between;
	padding: 30rpx 0;
	font-size: 36rpx;
	font-family: MicrosoftYaHei;
	font-weight: 400;
	color: rgba(228, 227, 227, 0.68);
	height: 124rpx;
}
main .location .province {
	width: 100%;
	flex: 1;
	display: flex;
	white-space: nowrap;
	overflow: hidden;
}
main .location .province .one {
	display: inline-block;
	margin: 10rpx;
	margin-left: 0;
}
main .location .province-all {
	display: flex;
	align-items: center;
	justify-content: flex-end;
	font-size: 32rpx;
	font-family: MicrosoftYaHei;
	font-weight: bold;
	color: rgba(255, 255, 255, 0.68);
	width: 80rpx;
	border-left: 1px solid #bfbfbf;
}
