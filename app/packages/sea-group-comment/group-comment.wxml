<template is="leaveMessage" data="{{new: false}}"></template>

<div class="list">
  <block wx:for="{{featuredList}}" wx:for-index="i" wx:for-item="e" wx:key="{{i}}">
    <div class="one">
      <div class="head">
        <image mode="aspectFill" src="{{e.user.head}}" />
      </div>
      <div class="main">
        <div class="user">
          <div class="info">
            <text class="name">{{e.user.name}}</text>
          </div>
          <i class="more iconfont icon-misc"></i>
        </div>
        <div class="text">{{e.text}}</div>
        <div class="imgs">
          <block wx:for="{{e.imgs}}" wx:for-item="src">
            <image class="img img{{e.imgs.length}}" mode="aspectFill" wx:key="{{index}}" src="{{src}}" />
          </block>
        </div>
      </div>
    </div>
  </block>
</div>

<template is="leaveMessage" data="{{new: true}}"></template>

<template name="leaveMessage">
  <div class="leaveMessage">
    <div class="line"></div>
    <div class="center">
      <image class="img" src="./img/{{new ? 'new' : 'featured'}}.svg" />
      <span>{{new ? '最新留言' : '精选留言'}}</span>
    </div>
    <div class="line"></div>
  </div>
</template>
