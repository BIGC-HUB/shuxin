// 精选留言
.leaveMessage {
	font-size: 14px;
	font-weight: 400;
	color: rgba(0, 0, 0, 0.4);
	display: flex;
	align-items: center;
	justify-content: space-between;
	width: 100%;

	.line {
		width: 115px;
		height: 1px;
		background: rgba(0, 0, 0, 0.08);
	}

	.center {
		display: flex;
		align-items: center;

		.img {
			width: 40rpx;
			height: 40rpx;
			background: #999;
			border-radius: 50%;
			margin-right: 12rpx;
		}
	}
}