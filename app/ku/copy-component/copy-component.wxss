.copy-component {
  position: relative;
  width: 750rpx;
  height: 450rpx;
  background: rgba(255, 255, 255, 1);
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  flex-direction: column;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}
.copy-component .tip {
  margin-top: 80rpx;
  font-size: 28rpx;
}
.copy-component .url {
  margin-top: 20rpx;
  width: 600rpx;
  font-size: 24rpx;
  color: rgba(102, 102, 102, 1);
  text-align: center;
}
.copy-component .copy {
  width: 240rpx;
  height: 96rpx;
  background: rgba(47, 49, 51, 0.95);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  border-radius: 2rpx;
  position: absolute;
  bottom: 60rpx;
}
